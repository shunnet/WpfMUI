<UserControl
    x:Class="Snet.Windows.Controls.ledgauge.LedGaugeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Snet.Windows.Controls.ledgauge"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="root"
    Focusable="False">
    <Viewbox>
        <Grid>
            <Ellipse
                Name="OuterBorder"
                Width="100"
                Height="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Fill="#FF000000">
                <UIElement.Effect>
                    <BlurEffect Radius="5" />
                </UIElement.Effect>
            </Ellipse>
            <Ellipse
                Name="Border"
                Width="100"
                Height="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom">
                <Shape.Fill>
                    <RadialGradientBrush Center="0.1,0" GradientOrigin="0.5,0" RadiusX="1" RadiusY="1">
                        <GradientBrush.GradientStops>
                            <GradientStop Offset="0.2" Color="#FFF4F4F4" />
                            <GradientStop Offset="1" Color="#FF444444" />
                        </GradientBrush.GradientStops>
                    </RadialGradientBrush>
                </Shape.Fill>
            </Ellipse>
            <Ellipse
                Name="InnerBorder"
                Width="83"
                Height="83"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Shape.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0.4,1">
                        <GradientBrush.GradientStops>
                            <GradientStop Offset="0" Color="#FF444444" />
                            <GradientStop Offset="1" Color="#FFDDDDDD" />
                        </GradientBrush.GradientStops>
                    </LinearGradientBrush>
                </Shape.Fill>
            </Ellipse>
            <Ellipse
                Name="Lamp"
                Width="80"
                Height="80"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Shape.Fill>
                    <RadialGradientBrush>
                        <GradientBrush.GradientStops>
                            <GradientStop Color="#FF00A000" />
                            <GradientStop Offset="0.5" Color="#FF009000" />
                            <GradientStop Offset="0.66" Color="#FF008000" />
                            <GradientStop Offset="0.9" Color="#FF006000" />
                            <GradientStop Offset="0.95" Color="#FF005000" />
                            <GradientStop Offset="1" Color="#FF003000" />
                        </GradientBrush.GradientStops>
                    </RadialGradientBrush>
                </Shape.Fill>
            </Ellipse>
        </Grid>
    </Viewbox>
</UserControl>
