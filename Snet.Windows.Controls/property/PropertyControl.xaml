<UserControl
    x:Class="Snet.Windows.Controls.property.PropertyControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pt="clr-namespace:Snet.Windows.Controls.property.wpf"
    xmlns:snet="https://shunnet.top/language"
    xmlns:ui="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:uis="http://schemas.lepo.co/wpfui/2022/xaml"
    snet:ResxLocalizationProvider.DefaultAssembly="Snet.Windows.Controls"
    snet:ResxLocalizationProvider.DefaultDictionary="Language"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Snet.Windows.Controls;component/property/wpf/Controls/PopupBox/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Snet.Windows.Controls;component/property/wpf/Controls/ColorPicker/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Snet.Windows.Controls;component/property/wpf/Controls/FilePicker/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Snet.Windows.Controls;component/property/wpf/Controls/RadioButtonList/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Snet.Windows.Controls;component/property/wpf/Controls/DockPanelSplitter/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Snet.Windows.Controls;component/property/wpf/Controls/SpinControl/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Snet.Windows.Controls;component/property/wpf/Controls/HeaderedEntrySlider/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Snet.Windows.Controls;component/property/wpf/Controls/CheckMark/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Snet.Windows.Controls;component/property/wpf/Controls/TextBlockEx/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Snet.Windows.Controls;component/property/wpf/PropertyGrid/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Snet.Windows.Controls;component/property/wpf/TreeListBox/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Snet.Windows.Controls;component/property/wpf/DataGrid/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ui:Card ui:ColorZoneAssist.Mode="Standard">
        <ui:Card.Resources>
            <ResourceDictionary>
                <DataTemplate x:Key="PropertyGridHeaderTemplate" DataType="GroupBox">
                    <Grid Height="31">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <ui:PackIcon
                            Grid.Column="0"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Kind="Database" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Text="{snet:Loc 基础数据}"
                            TextAlignment="Center" />

                        <!--  导入导出  -->
                        <Button
                            Grid.Column="3"
                            Width="80"
                            Height="30.5"
                            Margin="0,-1,0,0"
                            Padding="0"
                            ui:ButtonAssist.CornerRadius="0,0,0,0"
                            Command="{Binding IncCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                            <Button.Style>
                                <Style BasedOn="{StaticResource MaterialDesignFlatSecondaryButton}" TargetType="Button">
                                    <!--  默认显示  -->
                                    <Setter Property="Visibility" Value="Visible" />

                                    <Style.Triggers>
                                        <!--  Command 为 null 时隐藏  -->
                                        <DataTrigger Binding="{Binding IncCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Image
                                        Width="15"
                                        Height="15"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Source="{DynamicResource Inc}"
                                        Stretch="Fill" />
                                </Grid>
                                <Grid Grid.Column="2">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="{snet:Loc 导入}"
                                        TextAlignment="Center" />
                                </Grid>
                            </Grid>
                        </Button>

                        <Button
                            Grid.Column="4"
                            Width="80"
                            Height="30.5"
                            Margin="0,-1,0,0"
                            Padding="0"
                            ui:ButtonAssist.CornerRadius="0,5,0,0"
                            Command="{Binding ExpCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                            <Button.Style>
                                <Style BasedOn="{StaticResource MaterialDesignFlatSecondaryButton}" TargetType="Button">
                                    <!--  默认显示  -->
                                    <Setter Property="Visibility" Value="Visible" />

                                    <Style.Triggers>
                                        <!--  Command 为 null 时隐藏  -->
                                        <DataTrigger Binding="{Binding ExpCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Image
                                        Width="15"
                                        Height="15"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Source="{DynamicResource Exp}"
                                        Stretch="Fill" />
                                </Grid>
                                <Grid Grid.Column="2">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="{snet:Loc 导出}"
                                        TextAlignment="Center" />
                                </Grid>
                            </Grid>
                        </Button>

                    </Grid>
                </DataTemplate>
            </ResourceDictionary>
        </ui:Card.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <pt:PropertyGrid
                x:Name="propertyGrid"
                Grid.ColumnSpan="2"
                MinWidth="300"
                Margin="0,-3,0,-3"
                Background="Transparent"
                BorderBrush="#00000000"
                BorderThickness="0"
                CategoryControlType="GroupBox"
                CategoryHeaderTemplate="{StaticResource PropertyGridHeaderTemplate}"
                EnableLabelWidthResizing="False"
                EnumAsRadioButtonsLimit="0"
                SelectedObject="{Binding BasicsData, RelativeSource={RelativeSource AncestorType=UserControl}}"
                TabVisibility="Collapsed">
                <pt:PropertyGrid.Resources>
                    <Style BasedOn="{StaticResource DefaultComboBoxStyle}" TargetType="{x:Type ComboBox}">
                        <Setter Property="ui:TextFieldAssist.DecorationVisibility" Value="Collapsed" />
                        <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesign.Brush.Primary}" />
                        <Setter Property="Height" Value="30" />
                        <Setter Property="Padding" Value="8,0,0,0" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                    </Style>
                    <Style BasedOn="{StaticResource DefaultTextBoxStyle}" TargetType="{x:Type pt:TextBoxEx}">
                        <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesign.Brush.Primary}" />
                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.Secondary}" />
                        <Setter Property="Height" Value="30" />
                        <Setter Property="Padding" Value="6,0,0,0" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                    </Style>
                    <Style BasedOn="{StaticResource MaterialDesignCardGroupBox}" TargetType="GroupBox">
                        <Setter Property="ui:GroupBoxAssist.HeaderPadding" Value="0" />
                        <Setter Property="ui:ElevationAssist.Elevation" Value="Dp0" />
                    </Style>
                    <Style BasedOn="{StaticResource MaterialDesignSecondaryCheckBox}" TargetType="CheckBox" />
                    <Style BasedOn="{StaticResource UiScrollBar}" TargetType="ScrollBar" />
                </pt:PropertyGrid.Resources>
            </pt:PropertyGrid>


            <Button
                Grid.Row="1"
                Margin="10,0,5,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                ui:ButtonAssist.CornerRadius="{DynamicResource WindowCornerRadius}"
                BorderThickness="0"
                Command="{x:Static ui:DialogHost.CloseDialogCommand}"
                IsDefault="True"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Visibility="{Binding ButtonVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}">
                <Button.CommandParameter>
                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">True</system:Boolean>
                </Button.CommandParameter>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Image
                            Width="15"
                            Height="15"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="{DynamicResource Confirm}"
                            Stretch="Fill" />
                    </Grid>
                    <Grid Grid.Column="2">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{snet:Loc 确认}"
                            TextAlignment="Center" />
                    </Grid>
                </Grid>
            </Button>
            <Button
                Grid.Row="1"
                Grid.Column="1"
                Margin="5,0,10,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                ui:ButtonAssist.CornerRadius="{DynamicResource WindowCornerRadius}"
                BorderThickness="0"
                Command="{x:Static ui:DialogHost.CloseDialogCommand}"
                IsDefault="True"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Visibility="{Binding ButtonVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}">
                <Button.CommandParameter>
                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">False</system:Boolean>
                </Button.CommandParameter>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Image
                            Width="15"
                            Height="15"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="{DynamicResource Cancel}"
                            Stretch="Fill" />
                    </Grid>
                    <Grid Grid.Column="2">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{snet:Loc 取消}"
                            TextAlignment="Center" />
                    </Grid>
                </Grid>
            </Button>
        </Grid>
    </ui:Card>
</UserControl>
