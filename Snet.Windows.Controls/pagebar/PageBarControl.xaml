<ItemsControl
    x:Class="Snet.Windows.Controls.pagebar.PageBarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Snet.Windows.Controls.pagebar"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pb="clr-namespace:Snet.Windows.Controls.pagebar"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://materialdesigninxaml.net/winfx/xaml/themes">
    <ItemsControl.Resources>

        <pb:IsEqualConverter x:Key="IsEqualConverter" />

        <Style x:Key="PageBarItem" TargetType="{x:Type pb:PageBarItem}">
            <Setter Property="MinWidth" Value="30" />
            <Setter Property="Padding" Value="5,0,5,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type pb:PageBarItem}">
                        <Button
                            x:Name="pageButton"
                            MinWidth="{TemplateBinding MinWidth}"
                            Margin="{TemplateBinding Padding}"
                            ui:ButtonAssist.CornerRadius="{DynamicResource WindowCornerRadius}"
                            Command="{TemplateBinding PageNumberCommand}"
                            CommandParameter="{TemplateBinding Value}"
                            Content="{TemplateBinding Content}"
                            Foreground="{TemplateBinding Foreground}"
                            IsEnabled="{TemplateBinding IsEnabled}"
                            Style="{DynamicResource MaterialDesignRaisedButton}"
                            ToolTip="{TemplateBinding ToolTip}" />
                        <ControlTemplate.Triggers>
                            <!--  DataTrigger 用于判断当前项是否是选中的  -->
                            <DataTrigger Value="True">
                                <DataTrigger.Binding>
                                    <MultiBinding Converter="{StaticResource IsEqualConverter}">
                                        <Binding Path="Value" RelativeSource="{RelativeSource Self}" />
                                        <Binding Path="PageIndex" RelativeSource="{RelativeSource AncestorType=pb:PageBarControl}" />
                                    </MultiBinding>
                                </DataTrigger.Binding>
                                <Setter TargetName="pageButton" Property="Background" Value="{DynamicResource CalendarViewSelectedBackground}" />
                                <Setter TargetName="pageButton" Property="Opacity" Value="0.7" />
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type pb:PageBarControl}">
            <Setter Property="IsTabStop" Value="False" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="ItemContainerStyle" Value="{StaticResource PageBarItem}" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type pb:PageBarControl}">
                        <Grid Margin="{TemplateBinding Padding}">
                            <ItemsPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </ItemsControl.Resources>

</ItemsControl>