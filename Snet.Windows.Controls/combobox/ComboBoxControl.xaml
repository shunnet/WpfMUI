<UserControl
    x:Class="Snet.Windows.Controls.combobox.ComboBoxControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Snet.Windows.Controls.combobox"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:uis="http://schemas.lepo.co/wpfui/2022/xaml">
    <Grid Height="{Binding Height, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Grid.Resources>
            <Style
                x:Key="CustomComboBoxItemStyle"
                BasedOn="{StaticResource DefaultComboBoxItemStyle}"
                TargetType="ComboBoxItem">
                <Setter Property="Padding" Value="10,6,10,6" />
            </Style>
        </Grid.Resources>
        <Label
            VerticalContentAlignment="Center"
            Content="{Binding Hint, RelativeSource={RelativeSource AncestorType=local:ComboBoxControl}}"
            Foreground="{DynamicResource TextPlaceholderColorBrush}">
            <Label.Style>
                <Style TargetType="Label">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Setter Property="Padding" Value="30,6,10,6" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=local:ComboBoxControl}}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Icon, RelativeSource={RelativeSource AncestorType=local:ComboBoxControl}}" Value="{x:Null}">
                            <Setter Property="Padding" Value="10,6,10,6" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>
        <ComboBox
            Height="{Binding Height, RelativeSource={RelativeSource AncestorType=UserControl}}"
            DisplayMemberPath="{Binding DisplayMemberPath, RelativeSource={RelativeSource AncestorType=local:ComboBoxControl}}"
            IsEditable="False"
            ItemContainerStyle="{StaticResource CustomComboBoxItemStyle}"
            ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType=local:ComboBoxControl}}"
            SelectedItem="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=local:ComboBoxControl}, Mode=TwoWay}">
            <ComboBox.Style>
                <Style BasedOn="{StaticResource DefaultComboBoxStyle}" TargetType="ComboBox">
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="Padding" Value="29,6,10,6" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Icon, RelativeSource={RelativeSource AncestorType=local:ComboBoxControl}}" Value="{x:Null}">
                            <Setter Property="Padding" Value="9,6,10,6" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ComboBox.Style>
        </ComboBox>
        <Image
            Width="15"
            Height="15"
            Margin="8,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Source="{Binding Icon, RelativeSource={RelativeSource AncestorType=local:ComboBoxControl}}"
            Stretch="Fill" />
    </Grid>
</UserControl>
