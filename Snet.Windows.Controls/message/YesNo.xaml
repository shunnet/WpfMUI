<UserControl
    x:Class="Snet.Windows.Controls.message.YesNo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Snet.Windows.Controls.message"
    xmlns:snet="https://shunnet.top"
    xmlns:ui="http://materialdesigninxaml.net/winfx/xaml/themes"
    snet:ResxLocalizationProvider.DefaultAssembly="Snet.Windows.Controls"
    snet:ResxLocalizationProvider.DefaultDictionary="Language">
    <GroupBox
        ui:GroupBoxAssist.HeaderPadding="7"
        Header="{Binding}"
        Style="{StaticResource MaterialDesignCardGroupBox}">
        <GroupBox.HeaderTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="25"
                        Height="25"
                        Source="{Binding Icon}"
                        Stretch="Fill" />
                    <TextBlock
                        Margin="6,0,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        FontSize="{DynamicResource TitleFontSize}"
                        FontWeight="{DynamicResource TitleFontWeight}"
                        Foreground="{DynamicResource TitleForeground}"
                        LineHeight="{DynamicResource TitleVerLineHeight}"
                        Text="{Binding Title}"
                        TextAlignment="Center" />
                </StackPanel>
            </DataTemplate>
        </GroupBox.HeaderTemplate>

        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Margin="5" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image
                    Grid.Column="0"
                    Width="24"
                    Height="24"
                    Margin="0,0,6,0"
                    HorizontalAlignment="Right"
                    Source="{Binding ContentIcon}"
                    Stretch="Fill" />
                <TextBox
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    ui:TextFieldAssist.DecorationVisibility="Collapsed"
                    AcceptsReturn="True"
                    BorderThickness="0,0,0,0"
                    IsReadOnly="True"
                    SpellCheck.IsEnabled="True"
                    Style="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                    Text="{Binding Content}"
                    TextAlignment="Center"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Hidden" />
            </Grid>
            <Grid
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Margin="0,16,0,0"
                    Padding="8,0,8,0"
                    HorizontalAlignment="Center"
                    ui:ButtonAssist.CornerRadius="{DynamicResource WindowCornerRadius}"
                    BorderThickness="0"
                    Command="{x:Static ui:DialogHost.CloseDialogCommand}"
                    IsDefault="True"
                    Style="{StaticResource MaterialDesignRaisedButton}">
                    <Button.CommandParameter>
                        <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">True</system:Boolean>
                    </Button.CommandParameter>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Image
                                Width="15"
                                Height="15"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Source="{DynamicResource Confirm}"
                                Stretch="Fill" />
                        </Grid>
                        <Grid Grid.Column="2">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{snet:Loc 是}"
                                TextAlignment="Center" />
                        </Grid>
                    </Grid>
                </Button>
                <Button
                    Grid.Column="1"
                    Margin="16,16,0,0"
                    Padding="8,0,8,0"
                    HorizontalAlignment="Center"
                    ui:ButtonAssist.CornerRadius="{DynamicResource WindowCornerRadius}"
                    BorderThickness="0"
                    Command="{x:Static ui:DialogHost.CloseDialogCommand}"
                    IsDefault="True"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Visibility="Visible">
                    <Button.CommandParameter>
                        <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">False</system:Boolean>
                    </Button.CommandParameter>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Image
                                Width="15"
                                Height="15"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Source="{DynamicResource Cancel}"
                                Stretch="Fill" />
                        </Grid>
                        <Grid Grid.Column="2">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{snet:Loc 否}"
                                TextAlignment="Center" />
                        </Grid>
                    </Grid>
                </Button>
            </Grid>
        </Grid>
    </GroupBox>
</UserControl>

