<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sv="clr-namespace:Snet.Windows.Core">
    <ResourceDictionary.MergedDictionaries>

        <ResourceDictionary Source="pack://application:,,,/Wpf.Ui;component/Resources/Theme/Light.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Wpf.Ui;component/Resources/Wpf.Ui.xaml" />

        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Grey.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Secondary/MaterialDesignColor.Cyan.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />

        <ResourceDictionary Source="pack://application:,,,/Snet.Windows.Core;component/resources/Icons.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Snet.Windows.Core;component/resources/WindowIcon.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Snet.Windows.Core;component/themes/style/Light.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Snet.Windows.Core;component/themes/WindowBase.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style
        x:Key="{x:Type sv:WindowBase}"
        BasedOn="{StaticResource WindowBaseStyle}"
        TargetType="{x:Type sv:WindowBase}" />
</ResourceDictionary>